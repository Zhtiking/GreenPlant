<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.greeplant.GreenPlant.dao.UserDao">
    <!--save-->
    <insert id="save" parameterType="com.greeplant.GreenPlant.entity.User">
        INSERT INTO t_user
        <trim prefix="(" suffix=")">
            <if test="#{USER_NAME} != null">USER_NAME,</if>
            <if test="#{PASSWORD}!= null">PASSWORD,</if>
            <if test="#{CREATETIME}!= null">CREATETIME</if>
        </trim>
        VALUE
        <trim prefix="(" suffix=")">
            <if test="#{USER_NAME} != null">#{USER_NAME},</if>
            <if test="#{PASSWORD} != null">#{PASSWORD},</if>
            <if test="#{CREATETIME} != null">#{CREATETIME}</if>
        </trim>
    </insert>

    <select id="findByUserName" parameterType="String" resultType="com.greeplant.GreenPlant.entity.User">
        select *
        from t_user where USER_NAME=#{USER_NAME}
    </select>
</mapper>